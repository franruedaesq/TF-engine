{
  "name": "tf-engine",
  "version": "1.0.0",
  "description": "Transform Frame Engine â€“ a directed graph of spatial transforms between named reference frames",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "prepublishOnly": "npm run build && npm test",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "lint": "eslint src tests",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/franruedaesq/TF-engine.git"
  },
  "keywords": [
    "transform",
    "frame",
    "robotics",
    "spatial",
    "graph",
    "quaternion"
  ],
  "author": "Francisco Rueda Esquivel <franruedaesq>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/franruedaesq/TF-engine/issues"
  },
  "homepage": "https://github.com/franruedaesq/TF-engine#readme",
  "dependencies": {
    "gl-matrix": "^3.4.4"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "vitest": {
    "include": [
      "tests/**/*.test.ts"
    ],
    "coverage": {
      "provider": "v8",
      "reporter": [
        "text",
        "lcov"
      ],
      "include": [
        "src/**/*.ts"
      ]
    }
  }
}
